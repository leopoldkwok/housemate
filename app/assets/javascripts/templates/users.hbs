        <li><a href="#">{{currentUserPaidText}}</a><span {{bind-attr style=currentUserPercentageText}}></span></li>
        <li><a href="#">{{flatPaidText}}</a><span {{bind-attr style=flatPercentageText}}></span></li>
    </ul> --}}
</div>

<footer>
    <div class="btn-group">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
            {{balanceMessage}}{{netOwedStr}}
        </button>
        <ul class="dropdown-menu pull-right" id="pay" role="menu">

            {{#each itemController='user'}}
                {{#if paymentDisplayAmount}}
                    {{#unless isCurrentUser}}
                        <li><button class='paybtn'>{{paymentMessage}}{{paymentDisplayAmount}}</button></li>


                    {{/unless}}
                {{/if}}
            {{/each}}

        </ul>
    </div>
</footer>


<div class='dynamic'> {{totalPositiveDelta}}  {{currentUserDelta}} </div>





