{{input type='text' id='input-bill' name='Bill' placeholder="Bill" value=newDescription}}
{{input type='text' id='input-amount' name='Amount' placeholder="Amount" value=newAmount}}
<button class='add-bill' {{action 'createBill'}} >Add Bill</button>


<ul>
    {{#each itemController='user'}}
            <li>{{email}}</li>
                {{#each bill in bills}}
                    {{#with bill}}
                        <li {{bind-attr class="settled:completed"}} > 
                            {{input type="checkbox" name='settle-check' checked=settled class="toggle"}}
                            {{description}} £{{adjustedAmount}} {{settled}}
                            <button {{action "removeBill" id}} class="destroy">X</button>
                        </li>
                    {{/with}}
                {{/each}}
            <p>Total Settled: £{{adjustedCompleted}}</p>
    {{/each}}
</ul>


