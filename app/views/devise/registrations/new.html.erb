<div class="container-fluid">
  <h2>Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-inline', role: 'form'}) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group col-xs-12 col-sm-6 col-lg-3">
        <%= f.label :email, class: "sr-only col-xs-4" %>
        <div class="col-xs-8">
          <%= f.email_field :email, class: "form-control", autofocus: true, placeholder: "Email address" %>
        </div>
      </div>

      <div class="form-group col-xs-12 col-sm-6 col-lg-3">
        <%= f.label :password, class: "sr-only col-xs-4" %>
        <div class="col-xs-8">
          <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "Password" %>
        </div>
      </div>

      <div class="form-group col-xs-12 col-sm-6 col-lg-3">
        <%= f.label :password_confirmation, class: "sr-only col-xs-4" %>
        <div class="col-xs-8">
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off", placeholder: "Re-enter password" %>
        </div>
      </div>

      <div class="form-group col-xs-12 col-sm-6 col-lg-3">
        <%= f.submit "Sign up", class: "btn btn-default col-xs-8" %>
      </div>
  <% end %>
  <blockquote><h3>"Home is where one starts from"</h3><h4>T. S. Eliot</h4></blockquote>
</div><!-- End of main container -->