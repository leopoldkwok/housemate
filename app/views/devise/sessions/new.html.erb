<div class="container-fluid">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-inline', role: 'form'}) do |f| %>

    <div class="form-group col-xs-12 col-sm-6 col-lg-3">
      <%= f.label :email, class: "sr-only col-xs-4" %>
      <div class="col-xs-8">
        <%= f.email_field :email, class: "form-control", autofocus: true, placeholder: "Email address" %>
      </div>
    </div>

    <div class="form-group col-xs-12 col-sm-6 col-lg-3">
      <%= f.label :password, class: "sr-only col-xs-4" %>
      <div class="col-xs-8">
        <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "Password" %>
      </div>
    </div>


  <div class="form-group col-xs-12 col-sm-6 col-lg-3">
    <%= f.submit "Log in", class: "btn btn-default col-xs-8" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group col-xs-12 col-sm-6 col-lg-3">
    <%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end %>
  <% end %>
    <blockquote><h3>"Home is where I work, and I work everywhere."</h3><h4>
    Alfred Nobel</h4></blockquote>
</div>
