<h1><%= @abode.name_number %> 
<%= @abode.street %></h1>

<div class="container-fluid">

  <p>Add your HouseMates</p>
  
  <section class="row">
    <%= form_tag("/abodes/add_user", method: "post") do %>
      <div class="form-group col-xs-6 col-sm-4 col-md-4">
        <%= text_field_tag :email, nil, :class => "form-control",  placeholder: "HouseMates email address" %>
        <div class="col-xs-6">
          <%= hidden_field_tag(:abode_id, value = @abode.id) %>
        </div>
      </div>   
      <div class="form-group col-md-4">
        <%= submit_tag "Add", class: "btn btn-default col-xs-3" %>
      </div>
    <% end %>
  </section>
</div>
<h3><%= link_to 'Finished', root_path %></h3>
