<!DOCTYPE html>
<html>

  <head>
    <title>HouseMates</title>
    <%= csrf_meta_tags %>
    <meta charset="utf-8">
    <%= javascript_include_tag "application" %>
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">
    <link href='http://fonts.googleapis.com/css?family=Roboto+Slab:400|Open+Sans' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    

    <%- if user_signed_in? %>
      <meta hidden name="current-user" content="<%= UserSerializer.new(current_user).to_json(root: false) %>" />
    <% end %>

  </head>

  <body>
    <header>
      <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div id="brand" class="col-xs-2 col-md-2"><a class="navbar-brand" href="#"><img src="/Logo.png"></a></div>
        <div class="navbar-header col-xs-8 col-md-8"><h1>HouseMate</h1></div>
        <div><a href="#" class="navbar-menu col-xs-2 col-md-2" data-toggle="dropdown"><img src="/Menu.png"></a>
          <ul class="dropdown-menu pull-right" role="menu">
            <li><a href="#">Settings</a></li>
            <li><a href="#">All bills</a></li>
            <li><a href="#">Pay Housemates</a></li>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
          </ul>
        </div>
      </nav><!-- End of nav bar -->
    </header>

      <% if user_signed_in? %>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to "Sign in", new_user_session_path %>
        <%= link_to "Sign up", new_user_registration_path %>
      <%end%>
      <%= link_to "Add an abode", new_abode_path %>
    
      <%= notice %>
    
    <%= yield %>



    <main id="ember-app"></main>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  </body>
</html>
